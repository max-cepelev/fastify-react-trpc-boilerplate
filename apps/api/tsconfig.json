{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"target": "esnext",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"noEmit": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"moduleDetection": "force"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
